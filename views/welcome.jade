// Welcome Template

extends layout

block content

    section
        h1#page_title= title
    
        #welcome_container
            .sign_in
                h2 Sign In

                form(method="POST", action="/signin")
                    p Name
                    input(type="text", name="name")
                    p Password
                    input(type="password", name="password")
                    p
                    button(type="submit") Sign In

            .sign_up
                h2 Sign Up

                form(method="POST", action="/signup")
                    p Name
                    input(type="text", name="name")
                    p Email
                    input(type="text", name="email")
                    p Phone
                    input(type="text", name="phone")
                    p Password
                    input(type="password", name="password")
                    p
                    button(type="submit") Sign Up
  
            .corporate_banners
                img(src='/images/aws_logo.png')
                hr
                img(src='/images/microsoft_azure_logo.png')
                hr
                img(src='/images/google_cloud.png')
                hr
                img(src='/images/thoughtpivot-logo.png')
